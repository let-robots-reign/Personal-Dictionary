<%= form_with(model: word, local: true, id: 'word-form') do |form| %>
  <% if word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
        <% word.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :word, t('word') %>
    <%= form.text_field :word, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :translation, t('translation') %>
    <%= form.text_field :translation, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :synonyms, t('synonyms') %>
    <%= form.text_field :synonyms, class: 'form-control' %>
    <small class="form-text text-muted"><%= t('field_optional') %></small>
  </div>

  <div class="field form-group">
    <%= form.label :example, t('example') %>
    <%= form.text_field :example, class: 'form-control' %>
    <small class="form-text text-muted"><%= t('field_optional') %></small>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
