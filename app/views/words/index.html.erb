<p id="notice"><%= notice %></p>

<div class="row d-flex justify-content-center">
  <p class="h1">Words</p>

  <table class="table table-hover text-center m-5">
    <thead>
    <tr>
      <th>â„–</th>
      <th>Word</th>
      <th>Translation</th>
      <th>Synonyms</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @words.each_with_index do |word, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= word.word %></td>
        <td><%= word.translation %></td>
        <td><%= word.synonyms %></td>
        <td><%= link_to 'Show |', word %>
          <%= link_to 'Edit |', edit_word_path(word) %>
          <%= link_to 'Destroy ', word, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Word', new_word_path %>
</div>
