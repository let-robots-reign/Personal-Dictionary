<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">

    <div class="col-2">

    </div>

    <div class="col-10 text-center custom-card">
      <p class="h1">Your dictionary</p>

      <%= link_to new_word_path, id: 'add-word', class: 'btn btn-success' do %>
        Добавить
        <i class="fas fa-plus-circle icon-2x"></i>
      <% end %>

      <p class="text-md-left" id="chosen-words-number">
        <span></span>
        <a class="btn btn-light">Удалить все <i class="far fa-trash-alt icon-2x ml-1"></i></a>
      </p>

      <table class="table table-hover text-center">
        <thead>
        <tr>
          <th>
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="global-checkbox">
              <label class="custom-control-label" for="global-checkbox"></label>
            </div>
          </th>
          <th>№</th>
          <th>Word</th>
          <th>Translation</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @words.each_with_index do |word, index| %>
          <tr class='words'>
            <td>
              <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input word-checkbox" id="checkbox-<%= word.id %>">
                <label class="custom-control-label" for="checkbox-<%= word.id %>"></label>
              </div>
            </td>
            <td class="word-index"><%= index + 1 %></td>
            <td class="word"><%= word.word %></td>
            <td class="word-translation"><%= word.translation %></td>
            <td>
              <i class="fas fa-eye icon-2x mr-1 show-word" data-toggle="modal" data-target="#modal-long"></i>
              <span> | </span>
              <%= link_to edit_word_path(word), class: 'edit-word' do %>
                <i class="fas fa-pencil-alt icon-2x ml-1 mr-1"></i>
              <% end %>
              <span> | </span>
              <%= link_to word, method: :delete, data: { confirm: 'Are you sure?' }, remote: true,
                          class: 'delete-word' do %>
                <i class="far fa-trash-alt icon-2x ml-1"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal-long" tabindex="-1" role="dialog" aria-labelledby="modal-long-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-long-title">Страница слова</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center" id="word-model-body"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Edit</button>
      </div>
    </div>
  </div>
</div>


<%= javascript_pack_tag 'index' %>
