<div class="container custom-card">
  <div class="row">
    <div class="col">
      <h2>Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                   html: { method: :put, class: 'devise-form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field form-group">
          <%= f.label :password, "New password" %><br/>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small><br/>
          <% end %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, "Confirm new password" %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
