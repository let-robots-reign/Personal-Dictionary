<div class="container custom-card">
  <div class="row">
    <div class="col">
      <h2><%= t('.change_your_password') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                   html: { method: :put, class: 'devise-form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field form-group">
          <%= f.label :password, t('.new_password') %><br/>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">(<%= t('devise.shared.minimum_password_length',
                                                       count: @minimum_password_length) %></small><br/>
          <% end %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, t('.confirm_new_password') %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>